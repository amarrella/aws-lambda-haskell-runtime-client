    , transformers >=0.5.6 && <0.6
    , unordered-containers >=0.2.10 && <0.3
    , wreq >=0.5.3 && <0.6
  if flag(static)
    cc-options: -static
    ld-options: -static -pthread
  default-language: Haskell2010

